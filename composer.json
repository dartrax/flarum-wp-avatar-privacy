{
	"name": "dartrax/flarum-wp-avatar-privacy",
	"description": "Integrates avatars cached by the popular Avatar Privacy plugin for Wordpress into Flarum",
	"keywords": [
		"flarum",
		"wordpress",
		"user",
		"avatar",
		"privacy"
	],
	"homepage": "https://github.com/dartrax/flarum-wp-avatar-privacy",
	"support": {
		"source": "https://github.com/dartrax/flarum-wp-avatar-privacy",
		"issues": "https://github.com/dartrax/flarum-wp-avatar-privacy/issues"
	},
	"license": "MPL-2.0",
	"type": "flarum-extension",
	"require": {
		"flarum/core": "^1.0.0"
	},
	"autoload": {
		"psr-4": {
			"Dartrax\\FlarumWpAvatarPrivacy\\": "src/"
		}
	},
	"extra": {
		"flarum-extension": {
			"title": "WP Avatar Privacy",
			"icon": {
				"name": "fa fa-user-circle",
				"backgroundColor": "#0073aa",
				"color": "#CCE3EE"
			}
		}
	},
	"archive": {
		"exclude": [
			".*",
			"/scripts",
			"/docker",
			"/js",
			"!/js/dist"
		]
	}
}
